generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model do śledzenia limitów IP dla użytkowników Freemium
model IpRateLimit {
  id        String   @id @default(cuid())
  ip        String   @unique // Adres IP użytkownika
  count     Int      @default(0) // Liczba wykonanych wywiadów
  resetTime DateTime // Data, kiedy licznik ma się zresetować
}